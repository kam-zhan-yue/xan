---
const { to, title, published } = Astro.props
const publishedDate = published ? new Date(published).toLocaleDateString() : null
---
<a class="no-underline!" href={to}>
  <li class="flex flex-col sm:flex-row justify-between sm:items-center h-12 hover:bg-secondary hover:text-white">
    <div>{title}</div>
    {publishedDate && <div>{publishedDate}</div>}
  </li>
</a>

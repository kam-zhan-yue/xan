---
import { Image } from 'astro:assets'
import NavLink from './NavLink.astro'
import workButton from '../assets/buttons/work-button.png'
import workButtonActive from '../assets/buttons/work-button-active.png'
import experimentalButton from '../assets/buttons/experimental-button.png'
import experimentalButtonActive from '../assets/buttons/experimental-button-active.png'
import homeButton from '../assets/buttons/home-button.png'
import homeButtonActive from '../assets/buttons/home-button-active.png'
import personalButton from '../assets/buttons/personal-button.png'
import personalButtonActive from '../assets/buttons/personal-button-active.png'

---

<div class="flex flex-row justify-center mt-4">
  <NavLink title='Home' to='/' active={homeButtonActive} inactive={homeButton} />
  <NavLink title='Work' to='/work/' active={workButtonActive} inactive={workButton} />
  <NavLink title='Personal' to='/games/' active={personalButtonActive} inactive={personalButton} />
  <NavLink title='Experimental' to='/experimental/' active={experimentalButtonActive} inactive={experimentalButton} />
</div>
